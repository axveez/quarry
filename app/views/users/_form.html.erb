
<div class="container-fluid "> 
  <!-- class : page__container -->

  <div class="row card-form">
    <div class="col-lg-12 col-md-12 card-group-row__col">
      <div class="card card-group-row__card">
        <div class="card-header card-header-large bg-light d-flex align-items-center">
          <div class="flex">
            <h4 class="card-header__title">Form User</h4>
            <p id="notice"><%= notice %></p>

          </div>
        </div>
        <div class="card-body d-flex align-items-center card-form__body">
          <%= form_with(model: user, local: true) do |form| %>
            <% if user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                <% user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :nama_lengkap %>
              <%= form.text_field :full_name , :class=>"form-control", :readonly=> true %>
            </div>

            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email , :class=>"form-control", :readonly=> true %>
            </div>

            <div class="form-group">
              <%= form.label :username %>
              <%= form.text_field :username , :class=>"form-control", :readonly=> true %>
            </div>

            <div class="form-group">
              <%= form.label :jenis_akun %>
              <%= form.select :user_type ,options_for_select([["Admin","admin"],["Penjaga Armada","fleet_guard"],["Penjaga Quarry","quarry_guard"],["Penjaga Pengurukan","backfill_guard"],["Penjaga Pengurukan","backfill_guard"],["Supir","driver"],["Guest","guest"],["Pengamat","spect"]],(user.user_type)), {:include_blank=> '-- Pilih --'}, :required=>true, :class=>"form-control" %>
            </div>

            <div class="form-group">
              <%= form.submit "Save", :class=>"btn btn-primary" %>
              <%= link_to 'Back', users_path ,:class=>"btn btn-secondary"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

