<div class="container-fluid "> 
  <!-- class : page__container -->

    <div class="row card-form">
        <div class="col-lg-12 col-md-12 card-group-row__col">
            <div class="card card-group-row__card">
                <div class="card-header card-header-large bg-light d-flex align-items-center">
                    <div class="flex">
                        <h4 class="card-header__title">Form Alat Berat</h4>
                    </div>
                </div>
                <div class="card-body d-flex align-items-center card-form__body">
                  <%= form_with(model: heavy_equipment, local: true) do |form| %>
                    <% if heavy_equipment.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(heavy_equipment.errors.count, "error") %> prohibited this heavy_equipment from being saved:</h2>

                        <ul>
                        <% heavy_equipment.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="form-row">
                      <div class="col-12 col-md-6 mb-3">
                        <%= form.label :nama_mesin %>
                        <%= form.text_field :machine_name , :class=>"form-control"%>
                      </div>

                      <div class="col-12 col-md-6 mb-3">
                        <%= form.label "nomor stnk / silo" %>
                        <%= form.text_field :stnk_number, :class=>"form-control"%>
                      </div>
                    </div>
                    

                    <div class="form-group">
                      <%= form.label :nomor_sio %>
                      <%= form.text_field :sio_number, :class=>"form-control"%>
                    </div>

                    <div class="form-group">
                      <%= form.label :lokasi %>
                      <%= form.select :location_id ,options_for_select(@locations.map { |e| ["#{e.name}",e.id] },(heavy_equipment.location_id)), {:include_blank=> '-- Pilih --'}, :required=>true, :class=>"form-control select2" %>
                    </div>


                    <div class="actions">
                      <%= form.submit "Save", :class=>"btn btn-primary" %>
                      <%= link_to 'Back', heavy_equipments_path ,:class=>"btn btn-secondary"%>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
    </div>

</div>

