
<div class="container-fluid "> 
  <!-- class : page__container -->

  <div class="row card-form">
    <div class="col-lg-12 col-md-12 card-group-row__col">
      <div class="card card-group-row__card">
        <div class="card-header card-header-large bg-light d-flex align-items-center">
          <div class="flex">
            <h4 class="card-header__title">Show Supir</h4>
            <p id="notice"><%= notice %></p>

          </div>
        </div>
        <div class="card-body d-flex align-items-center card-form__body">
          <%= form_with(model: @driver, local: true) do |form| %>
          
          

          <div class="form-group">
            <%= label_tag :nama_lengkap %>
            <%= text_field_tag :full_name, @driver.full_name , :class=>"form-control", :disabled=>true%>
          </div>

          <div class="form-group">
            <%= label_tag :nomor_sim %>
            <%= text_field_tag :sim_number, @driver.sim_number , :class=>"form-control", :disabled=>true%>
          </div>

          <div class="form-group">
            <%= label_tag :nomor_ktp %>
            <%= text_field_tag :identity_number, @driver.identity_number , :class=>"form-control", :disabled=>true%>
          </div>

          <div class="actions">
            <% case current_user.user_type %>
            <% when 'admin' %>
              <%= link_to 'Edit', edit_driver_path(@driver), :class=>"btn btn-primary" %>
            <% end %>
            <%= link_to 'Back', drivers_path ,:class=>"btn btn-secondary"%>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

