
<div class="container-fluid "> 
  <!-- class : page__container -->

  <div class="row card-form">
    <div class="col-lg-12 col-md-12 card-group-row__col">
      <div class="card card-group-row__card">
        <div class="card-header card-header-large bg-light d-flex align-items-center">
          <div class="flex">
            <h4 class="card-header__title">Form Supir</h4>
            <p id="notice"><%= notice %></p>

          </div>
        </div>
        <div class="card-body d-flex align-items-center card-form__body">
          <%= form_with(model: driver, local: true) do |form| %>
            <% if driver.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

                <ul>
                <% driver.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :nama_lengkap %>
              <%= form.text_field :full_name , :class=>"form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :nomor_sim %>
              <%= form.text_field :sim_number , :class=>"form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :nomor_ktp %>
              <%= form.text_field :identity_number , :class=>"form-control" %>
            </div>

            <div class="form-group">
              <%= form.submit "Save", :class=>"btn btn-primary" %>
              <%= link_to 'Back', drivers_path ,:class=>"btn btn-secondary"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>

